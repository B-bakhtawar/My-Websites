<%- include("layout", {
  title: "Login",
  body: `
  <section class="page-head">
    <div class="container">
      <h1>Login</h1>
      <p class="muted">Admin access only.</p>
      ${error ? `<div class="alert danger">${error}</div>` : ``}
    </div>
  </section>

  <section class="section">
    <div class="container" style="max-width:520px;">
      <div class="card">
        <form class="form" method="post" action="/login">
          <div class="field">
            <label>Email</label>
            <input type="email" name="email" placeholder="admin@grand.com" required />
          </div>

          <div class="field">
            <label>Password</label>
            <input type="password" name="password" placeholder="••••••••" required />
          </div>

          <button class="btn dark" type="submit">Login</button>
        </form>

        <p class="muted" style="margin-top:12px;font-size:13px;">
          Demo Admin: <b>admin@grand.com</b> / <b>admin123</b>
        </p>
      </div>
    </div>
  </section>
  `
}) %>

